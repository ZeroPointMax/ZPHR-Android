<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.VolumeFragment">

    <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="222dp"
            android:layout_height="39dp"
            android:id="@+id/progressBar"
            android:progress="42" android:max="100"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/vol_hdph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/progressBar" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/progressBar"
    />
    <TextView
            android:text="\?\?\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_vol_hdph"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/progressBar"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <ImageButton
            android:src="@drawable/baseline_refresh_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/refreshButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" android:layout_marginStart="48dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>